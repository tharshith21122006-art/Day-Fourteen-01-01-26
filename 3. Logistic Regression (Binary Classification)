import math

x = [0,1,2,3]
y = [0,0,1,1]

w, b = 0.0, 0.0
lr = 0.1

for _ in range(1000):
    for i in range(len(x)):
        z = w*x[i] + b
        pred = 1 / (1 + math.exp(-z))
        error = y[i] - pred
        w += lr * error * x[i]
        b += lr * error

print("Weight:", w)
print("Bias:", b)
